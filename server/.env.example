# Local Development Environment Variables
# Copy this file to .env in the server directory for local development

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=customerdb
DB_USERNAME=customeruser
DB_PASSWORD=customerpass

# Server Configuration
SERVER_PORT=8080

# CORS Configuration
CORS_ALLOWED_ORIGINS=http://localhost:5173,http://localhost:5174

# Application Behavior
JPA_DDL_AUTO=create-drop
JPA_SHOW_SQL=true
LOG_LEVEL=DEBUG
SPRING_LOG_LEVEL=DEBUG

# Health Check Configuration
DB_HEALTH_CHECK=true
HEALTH_DETAILS=always
MANAGEMENT_ENDPOINTS=health,info,env