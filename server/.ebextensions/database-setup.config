commands:
  01_install_postgresql_client:
    command: "yum install -y postgresql15"
    
files:
  "/opt/elasticbeanstalk/tasks/bundlelogs.d/applogs.conf":
    mode: "000644"
    owner: root
    group: root
    content: |
      /var/log/eb-docker/containers/eb-current-app/*.log
      /tmp/spring.log

container_commands:
  01_setup_database:
    command: |
      if [ ! -z "$RDS_HOSTNAME" ]; then
        echo "RDS endpoint detected: $RDS_HOSTNAME"
        # Wait for RDS to be available
        timeout 60 bash -c 'until printf "" 2>>/dev/null >>/dev/tcp/$RDS_HOSTNAME/$RDS_PORT; do sleep 1; done'
        echo "Database connection verified"
      fi
    leader_only: true